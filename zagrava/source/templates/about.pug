//- Utility

include utils/_variable.pug

-
    pageTitle = 'about'


doctype html
html
    include layout/_head

    body

        = '\n'
        //= Layout =
        #layout.layout.layout--about

            - dots = true
            include layout/_header

            //= Main =
            main#main.main
                .container
                    .layout-box
                        section.section.section--title.stretch
                            h1 about
                        section.section
                            include module/_about
                            include module/_membership



            //= End main =
            = '\n'

            #shadow

        //= End layout =

        -
            mascot = true
            dots = false

        include layout/_footer
        include module/_mobile-menu

        include layout/_sprite
        include layout/_scripts




