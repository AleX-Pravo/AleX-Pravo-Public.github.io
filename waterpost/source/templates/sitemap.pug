//- Utility

include utils/_variable.pug
include mixin/_nested-list.pug

-
    pageTitle = 'sitemap'
    siteMap = true
    headerInner = true
    searchList = true

    breadcrumbItems = breadcrumbNewsItems


doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout.layout.layout--inner
            include layout/_header.pug

            //= Main =
            main#main.main
                .container
                    .layout__box
                        include module/_breadcrumb.pug
                        h1 Карта сайту

                        include module/_sitemap.pug

            //= End main =
            = '\n'

            #shadow

        //= End layout =

        include layout/_footer.pug
        include module/_mobile-menu.pug
        include layout/_sprite.pug
        include layout/_scripts.pug
