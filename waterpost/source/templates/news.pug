//- Utility

include utils/_variable.pug

-
    pageTitle = 'news'
    breadcrumbItems = breadcrumbNewsItems
    searchList = true

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout.layout
            include layout/_header.pug

            //= Main =
            main#main.main
                .container
                    .layout-box
                        include module/_breadcrumb.pug

                        h1 Новини індустрії
                        include module/_category.pug

                        .layout-box__news
                            - for(let i = 0; i < 4; i++) {
                                each prop in newsCartsItems
                                    include module/_news.pug
                            - }
                        include module/_pagination.pug


            //= End main =
            = '\n'

            #shadow

        //= End layout =

        include layout/_footer.pug
        include module/_mobile-menu.pug
        include layout/_sprite.pug
        include layout/_scripts.pug
