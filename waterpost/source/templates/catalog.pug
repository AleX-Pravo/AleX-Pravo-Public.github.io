//- Utility

include utils/_variable.pug

-
    pageTitle = 'catalog'
    perfectScrollBar = true
    headerInner = true
    rating = true
    searchList = true

    breadcrumbItems = breadcrumbCatalogItems


doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout.layout.layout--catalog
            include layout/_header.pug

            //= Main =
            main#main.main
                .container
                    .layout-box
                        .layout-box__catalog
                            include module/_filter.pug
                            section
                                include module/_breadcrumb.pug
                                h1 Каталог води
                                include module/_catalog.pug
                                include module/_pagination.pug

                            include module/_filter-button.pug

            //= End main =
            = '\n'

            #shadow

        //= End layout =

        include layout/_footer.pug
        include module/_mobile-menu.pug
        include layout/_sprite.pug
        include layout/_scripts.pug
