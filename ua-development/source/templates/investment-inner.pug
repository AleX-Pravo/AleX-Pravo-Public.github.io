//- Utility

include utils/_variable.pug

-
    pageTitle = 'investment-inner'
    nameTitle = 'Інвестиційна діяльність'
    //-subTitle = 'Маршрути'

    //- use if necessary
    swiper = true
    innerSwiper = true
    //innerSwiperPopap = true
    magnificPopup = true // init magnificPopup styles
    magnificPopupOrdercall = true
    magnificPopupInvest = true
    magnificModalProgressconstr = true
    magnificPopupMessage = true

    //for breadcrumbs
    breadcrumbItems = ['Головна', 'Головна', 'Головна', 'Головна',nameTitle]

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout.layout.layout--investment
            include layout/_header.pug
            //= Main =
            main#main.main
                .container
                    .layout-box
                        .layout-box__content.__base
                            include module/_breadcrumb.pug
                            - innerInfo = true
                            - innerInfo = true
                            include module/_inner.pug

                    .layout-box__nav.__right
                        include layout/header/secondMenu/_secondMenu.pug
            //= End main =
            = '\n'

            #shadow

            = '\n'
            //= Modal cart=
            #course-of-construction.custom-popup
                .custom-popup-mask

                .custom-popup-content
                    include module/_modal-progress.pug
            //= End modal cart =
            = '\n'
        //= End layout =

        = '\n'
        //= Modal =
        .modal.modal--user.mfp-hide#ordercall-drive

            .modal__content
                - ordercall = true
                include module/_popup.pug
                - ordercall = false

        //= End modal =
        = '\n'

        = '\n'

        = '\n'
        //= Modal =
        .modal.modal--user.mfp-hide#invest-drive

            .modal__content
                - invest = true
                include module/_popup.pug
                - invest = false

        //= End modal =
        = '\n'

        = '\n'
        //= Modal =
        .modal.modal--message.mfp-hide#message

            .modal__content
                p Дякую Ваше повідомлення прийнято!

        //= End modal =
        = '\n'

        include layout/_footer.pug
        include module/_mobile-menu.pug
        include module/_cookies.pug

        include layout/_sprite.pug
        include layout/_scripts.pug

