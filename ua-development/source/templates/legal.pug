//- Utility

include utils/_variable.pug

-
    pageTitle = 'legal'
    nameTitle = 'Юридична допомога'
    //-subTitle = 'Маршрути'

    //- use if necessary
    magnificPopup = true // init magnificPopup styles
    magnificPopupOrdercall = true

    //for breadcrumbs
    breadcrumbItems = ['Головна']

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout.layout
            include layout/_header.pug
            //= Main =
            main#main.main
                .container
                    .layout-box
                        .layout-box__content.__base
                            include module/_breadcrumb.pug
                            - nameBlock = nameTitle
                            include module/_name-block.pug

                            - p1 = 'Структура розділу Юридична допомога та супровід об\'єктів будівництва'
                            - li1 = 'супровід процесу оформлення права власності на об’єкти нерухомості (виготовлення технічного паспорта на незавершене будівництво, на новобудову, оновлення даних технічного паспорта, введення в експлуатацію збудованого нерухомого майна та інше);'
                            - li2 = 'юридичний супровід узаконення об’єктів незавершеного будівництва, перепланувань, реконструкцій об’єктів нерухомості, самочинного будівництва;'
                            - li3 = 'переведення дачних і садових будинків в жилі (виготовлення всіх необхідних для цього документів)'
                            - li4 = 'приведення у відповідність всіх документів, що посвідчують Ваше право власності на нерухомість.'
                            include module/_text-block.pug
                            include module/_expand.pug
                            include module/_advice.pug

                        .layout-box__nav.__right
                            include layout/header/secondMenu/_secondMenu.pug
            //= End main =
            = '\n'

            #shadow

        //= End layout =

        = '\n'
        //= Modal =
        .modal.modal--user.mfp-hide#ordercall-drive

            .modal__content
                - ordercall = true
                include module/_popup.pug

        //= End modal =
        = '\n'

        include layout/_footer.pug
        include module/_mobile-menu.pug
        include module/_cookies.pug

        include layout/_sprite.pug
        include layout/_scripts.pug
