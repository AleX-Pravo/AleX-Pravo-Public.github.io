-
    micromarking = true

    itemscope = (micromarking) ? true : false
    itemprop = (micromarking) ? 'review' : false
    itemtype = (micromarking) ? 'http://schema.org/Review' : false
.rewiews(itemscope itemprop= itemprop itemtype= itemtype)
    -
        itempropInnerReviewed = 'itemReviewed'
        contentReviewed = 'Назва товару'

        itempropInnerPublished = 'datePublished'
        itempropInnerBody = 'reviewBody'
        itempropInnerAuthor = 'author'
    meta(itemprop= itempropInnerReviewed content= contentReviewed)

    each val in reviewsList
        section.rewiews__item
            h2.rewiews__user(itemprop= itempropInnerAuthor)= val.user
            p.rewiews__text(itemprop= itempropInnerBody)= val.text
            time.rewiews__date(itemprop= itempropInnerPublished datetime= val.time)= val.date

            a.rewiews__callback(href='javascript: void(0)') Ответить

            .rewiews__form(style='display: none')

                = '\n'
                //= Write =
                form.write(class='write--review' action='#' method='post')

                    .write__wrapper.write__field--ratio(style='display: none')
                        .rating.rating--write
