                            input(type='hidden' name='votes' value='21')

                    .write__wrapper
                        .write__field.write__field--user
                            input.write__input(type='text' name='login' placeholder='Введите Ваше имя')
                    .write__wrapper
                        .write__field.write__field--email
                            input.write__input(type='text' name='email' placeholder='Введите Ваш email')
                    .write__field.write__field--message
