//- Utility
include utils/_variable.pug

- pageTitle = 'services-marketing'

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout
            include layout/_header.pug
            include layout/header/fullscreen-menu/_fullscreen-menu.pug

            //= Main =
            main#main.main
                include module/_servicesMenu.pug
                - topBlock__title = 'Marketing'
                - topBlock__titleShadow = true
                //- topBlock__img = true
                - topBlock__desc = 'We build holistic campaigns, enabling our clients to aquiremore <br> customers.'
                include module/_topBlock.pug
                -
                    var tabsInfoNews = [
                        {
                            active: true,
                            title: 'Analytics'
                        },
                        {
                            title: 'Email Campaigns'
                        },
                        {
                            title: 'Online Advertising'
                        },
                        {
                            title: 'Distributed Marketing'
                        },
                        {
                            title: 'Billboards'
                        }
                    ]

                include module/_services.pug

            //= End main =
            = '\n'

        //= End layout =
        include layout/_footer.pug
        include layout/_scripts.pug
