include vars/_variable.pug

//= Pagination =
.pagination
    button.pagination__button Дивитись ще

    ul.pagination__list
        li.pagination__item.hide-mb-max
            a.pagination__link.pagination__link--prev.pagination__link--disabled(href='#')

        - for (var i = 1; i < 4; i++)
            if (i == 2)
                li.pagination__item.pagination__item--selected= i
            else
                li.pagination__item
                    a.pagination__link(href='#')= i

        li.pagination__item.pagination__item--ellipsis ...

        li.pagination__item
            a.pagination__link(href='#') 7

        li.pagination__item.hide-mb-max
            a.pagination__link.pagination__link--next(href='#')
//= End pagination =
= '\n'
