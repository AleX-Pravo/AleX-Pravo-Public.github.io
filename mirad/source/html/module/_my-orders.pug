.my-orders
    .my-orders__wrapper
        .my-orders__header
            .my-orders__cell.my-orders__cell--name Номер замовлення
            .my-orders__adaptive
                .my-orders__cell.my-orders__cell--date Дата формлення
                .my-orders__cell.my-orders__cell--quantity Кількість
                .my-orders__cell.my-orders__cell--sum Сума замовлення
                .my-orders__cell.my-orders__cell--status Статус замовлення
        - for(var j = 0; j < 3; j++)
            .my-orders__list
                .my-orders__head.arrow
                    .my-orders__cell.my-orders__cell--name
                        a(href="javascript:void(0)") #484475
                    .my-orders__adaptive
                        .my-orders__cell.my-orders__cell--date
