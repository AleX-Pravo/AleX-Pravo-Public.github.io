//- Utility
include utils/_variable.pug
- var pageTitle = 'Проекти'
//-breadcrumbs.pug
- var breadcrumbs = ['Головна', pageTitle]
doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout
            include layout/_header.pug
            include layout/_navigation.pug
            //= Main =
            main#main.main
                include module/_breadcrumbs.pug
                include module/_office-drop.pug
                include module/_project-inner.pug





            //= End main =
            = '\n'

        //= End layout =

        include layout/_footer.pug
        include layout/_scripts.pug

        script(src=bowerDir + 'slick-carousel/slick/slick.min.js')
        script(src=bowerDir + 'magnific-popup/dist/jquery.magnific-popup.min.js')
        script.
            $(document).ready(function() {
                $('.popup-gallery').each(function() {
                    $(this).magnificPopup({
                        delegate: '.slick-slide:not(.slick-cloned) a',
                        type: 'image',
                        gallery: {
                            enabled: true
                        },
                        removalDelay: 300,
                        mainClass: 'mfp-fade'
                    });
                });
                $('.product-slider--big').slick({
                    infinite: false,
                    slidesToShow: 1,
                    slidesToScroll: 1,
                    arrows: true,
                    fade: false,
                    asNavFor: '.product-slider--small',
                    focusOnSelect: false,
                });

                $('.product-slider--small').slick({
                    slidesToShow: 3,
                    slidesToScroll: 1,
                    asNavFor: '.product-slider--big',
                    focusOnSelect: true,
                    arrows: false,
                    //rows: 0,
                    vertical: true,
                    infinite: false,
                    verticalSwiping: true,
                });
            });
