//- Utility
include utils/_variable.pug
- var pageTitle = 'Плитка'
//-breadcrumbs.pug
- var breadcrumbs = ['Головна','Колекції', pageTitle]
doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout
            include layout/_header.pug
            include layout/_navigation.pug
            //= Main =
            main#main.main
                include module/_breadcrumbs.pug
                include module/_office-drop.pug
                include module/_product-top.pug
                include module/_product-character.pug
                include module/_product-bottom.pug


            //= End main =
            = '\n'

        //= End layout =

        include layout/_footer.pug
        include layout/_scripts.pug

        script(src=bowerDir + 'slick-carousel/slick/slick.min.js')
        script(src=bowerDir + 'magnific-popup/dist/jquery.magnific-popup.min.js')
        script.
            $(document).ready(function() {

                $('.product-top__slider').slick({
                    centerMode: false,
                    slidesToShow: 1,
                    slidesToScroll: 1,
                    dots: false,
                    arrows: true,
                    fade: false,
                    autoplay:false,
                    speed: 200,
                    infinite: false,
                });
                $('.product-character__slide').slick({
                    centerMode: false,
                    slidesToShow: 1,
                    slidesToScroll: 1,
                    dots: false,
                    arrows: true,
                    fade: false,
                    autoplay:false,
                    infinite: false,
                });
                $('.product-bottom__slider').slick({
                    centerMode: false,
                    slidesToShow: 3,
                    slidesToScroll: 1,
                    dots: false,
                    arrows: true,
                    fade: false,
                    autoplay:false,
                    adaptiveHeight: false,
                    infinite: false,
                    responsive: [
                        {
                          breakpoint: 600,
                          settings: {
                            slidesToShow: 2,
                          }
                        }
                    ]
                });
            });
