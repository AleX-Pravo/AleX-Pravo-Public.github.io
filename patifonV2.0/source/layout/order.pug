include vars/_variable.pug

-
    pageTitle = 'Order page'
    breadcrumbs = ['Главная', 'Корзина']

    select = true
    select2 = true
    owlCarousel = true

    catalog = catalogAccessories

    pageCart = true

doctype html
html

    include core/_head.pug

    body

        = '\n'
        //= Layout =
        #layout

            include region/header/_header.pug
            include region/nav/_nav.pug

            //= Main =
            main#main.main
                .container

                    = '\n'
                    //= Section =
                    section.section
                        .section__top

                            include module/breadcrumbs/_breadcrumbs.pug

                        .row
                            .section__container.section__container--order

                                = '\n'
                                //= Section =
                                section.section
                                    .section__top
                                        h1.section__title Оформление заказа

                                    include module/order/_order.pug

                                //= End section =
                                = '\n'

                            .section__container.section__container--orderFixed
                                .section__containerInner

                                    = '\n'
                                    //= Section =
                                    section.section
                                        .section__top
                                            .row
                                                .section__container.section__container--left
                                                    h1.section__title Ваш заказ

                                                .section__container.section__container--content

                                                    = '\n'
                                                    //= Cart =
                                                    .cart.cart--top
                                                        a.cart__edit(href='#')
                                                            span.cart__editText Редактировать заказ
                                                    //= End cart =
                                                    = '\n'

                                        include module/cart/_cart.pug

                                    //= End section =
                                    = '\n'

                                    //= Section =
                                    section.section.hide-sm-max

                                        - orderAccessoriesOwlCarouselInit = true

                                        .section__top
                                            h1.section__title Рекомендуем добавить к покупке

                                        = '\n'
                                        //= Catalog =
                                        .catalog.catalog--product
                                            .row
                                                #orderAccessories__owlCarousel.owl-carousel

                                                    - for (i = 0; i < 2; i++)

                                                        each val in catalog

                                                            = '\n'
                                                            //= Item =
                                                            .catalog__item
                                                                .catalog__itemInner
                                                                    .catalog__itemImage
                                                                        a.catalog__itemImageLink(href='#')
                                                                            img(src='data/catalog/' + val.image + '.jpg' alt= val.title)

                                                                    .catalog__itemContent
                                                                        .catalog__itemTitle
                                                                            a.catalog__itemTitleLink(href='#')= val.title

                                                                        .catalog__itemSection
                                                                            .catalog__itemContainer.catalog__itemContainer--left
                                                                                if ('priceOld' in val)
                                                                                    .catalog__itemPriceOld= val.priceOld

                                                                                .catalog__itemPrice= val.price

                                                                            .catalog__itemContainer.catalog__itemContainer--right
                                                                                button.button.button--buy
                                                                                    span.button__text В корзину
                                                            //= End item =

                                                    = '\n'

                                        //= End catalog =
                                        = '\n'

                                    //= End section =
                                    = '\n'

                    //= End section =
                    = '\n'

            //= End main =
            = '\n'

        //= End layout =

        include region/footer/_footer.pug
        include core/_script.pug
