include vars/_variable.pug

-
    pageTitle = 'Comparison page'

    owlCarousel = true

doctype html
html

    include core/_head.pug

    body

        = '\n'
        //= Layout =
        #layout

            include region/header/_header.pug
            include region/nav/_nav.pug

            //= Main =
            main#main.main
                .container

                    = '\n'
                    //= Section =
                    section.section
                        .section__top
                            .row
                                .section__container.section__container--left
                                    h1.section__title Сравниваем мобильные телефоны

                                .section__container.section__container--left
                                    .comparison
                                        a.comparison__clear(href='#') Очистить все

                        include module/comparison/_comparison.pug

                    //= End section =
                    = '\n'

            //= End main =
            = '\n'

        //= End layout =

        include region/footer/_footer.pug
        include core/_script.pug
