include vars/_variable.pug

-
    pageTitle = 'form-banks-proposal--popap'

    tab = true
    alfaPopup = true
    ionRangeSlider = true
    formIonRangeSliderInit = true

    pageTabInit = true

doctype html
html

    include core/_head.pug

    body

        = '\n'
        //= Layout =
        #layout

            include region/header/_header.pug
            include region/nav/_nav.pug

            //= Main =
            main#main.main
                .container
                    a.popup__agreement(href='#test-modal') banks-proposal--popap

                    .tab.tab--banks
                        .tab-menu
                            ul.tab-list
                                li.tab-item
                                    a.tab-link(href='#alfa') Альфа-банк
                                li.tab-item
                                    a.tab-link(href='#idea') Idea Bank

                        .tab-content
                            #alfa.tab-box
                                include module/details/module/form/_form.pug
                            #idea.tab-box
                                p ghbdtn
            //= End main =
            = '\n'

        //= End layout =

        include region/footer/_footer.pug

        = '\n'
        //= Modal =
        .white-popup-block.mfp-hide#test-modal

            //-include module/details/module/form/_form.pug

        //= End modal =
        = '\n'

        include core/_script.pug

        script(src=bowerDir + 'magnific-popup/dist/jquery.magnific-popup.js')
        script.
            $(document).ready(function () {

                $('.popup__agreement').magnificPopup({
                    type: 'inline',
                    preloader: false,
                    modal: true
                });

                $(document).on('click', '.form__close', function (e) {
                    e.preventDefault();
                    $.magnificPopup.close();
                });
            });
