        script.
            $(document).ready(function() {

                let controller = new ScrollMagic.Controller({
                    globalSceneOptions: {
                        triggerHook: 'onLeave'
                    }
                });

                let presentation = new TimelineMax(),
                    screen = new TimelineMax(),
                    protect = new TimelineMax(),
                    hardware = new TimelineMax();

                presentation.to('.scrollmagic__presentation', 4, {autoAlpha: 1})
                .to('.reverse', 3, {y:'-150%'}, '-=2')
                .to('.forward', 3, {y:'150%'}, '-=3')
                .to('.scrollmagic__presentation p', 2, {left:'50%'}, '-=1.2')
                .to('.scrollmagic__presentation', 2, {autoAlpha: 0})

                screen.to('.scrollmagic__text--screen h4', 1, {left: '50%'})
                .to('.scrollmagic__text--screen p', 1.5, {left: '0'}, '-=1.5')
                .to('.smooth', 1, {autoAlpha: 0})
                .to('.skew', 1, {autoAlpha: 1}, '-=.5')

                protect.to('#four', .05, {autoAlpha: 1})

                hardware.to('#six', .05, {autoAlpha: 1})
                .fromTo('.blinking', 1, {autoAlpha: 0}, {autoAlpha: 1, yoyo: true, repeat: -1})

                $('.scrollmagic__box').each(function() {
                    new ScrollMagic.Scene({ triggerElement: this })
                    .setPin(this)
                    .addTo(controller);
                });

                new ScrollMagic.Scene({ triggerElement: '.trigger__inner--main', duration: '100%' })
                .setTween(presentation)
                .addIndicators()     
                .addTo(controller);

                new ScrollMagic.Scene({ triggerElement: '.trigger__inner--screen'})
                .setTween(screen)
                .addIndicators()
                .addTo(controller);

                new ScrollMagic.Scene({ triggerElement: '#four'})
                .setTween(protect)
                .addIndicators()
                .addTo(controller);

                new ScrollMagic.Scene({ triggerElement: '#six'})
                .setTween(hardware)
                .addIndicators()
                .addTo(controller);
            });

        