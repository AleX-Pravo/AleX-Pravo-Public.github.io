                        .form-group
                            if ('text' in val)
                                .form-text= val.text

                            else
                                label.control-label= val.title

                                if ('radio' in val)
                                    .form-radio

                                        each radio in val.radio
                                            .radio.radio--small
                                                label

                                                    if ('checked' in radio && radio.checked)
                                                        input.radio-input(type='radio' name= radio.name checked)

                                                    else
                                                        input.radio-input(type='radio' name= radio.name)

                                                    i.radio-icon
                                                    .radio-title= radio.text

                                else if ('textarea' in val && val.textarea)
                                    textarea.form-control(cols='30' rows='5' placeholder=val.placeholder)

                                else
                                    input.form-control(type='text' placeholder=val.placeholder)

            .form-group.required
                .checkbox.checkbox--small
                    label
                        input.checkbox-input(type='checkbox')
                        i.checkbox-icon
