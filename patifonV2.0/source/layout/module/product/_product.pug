                                |  /
                                a.product__featureLink(href='#0') Камера 8 Мп + 2 Мп
                                |  /
                                a.product__featureLink(href='#0') OC Android 6.0

                            ul.product__featureList

                                each val in productFeature
                                    li.featureItem
                                        i.product__featureIcon(class='product__featureIcon--' + val.class)

                                            if ('iconText' in val)
                                                = val.iconText

                                        if ('title' in val)
                                            = val.title

                    .product__section
                        .product__menu
                            ul.product__menuList
                                li.product__menuItem
                                    a.product__menuLink.product__menuLink--review(href='#0')
                                        span.product__menuLinkBorder
                                            span.product__menuText 20 отзывов

                                        .product__rating.rating.ratingInit
                                            input(type='hidden' value='2')

                                li.product__menuItem
                                    a.product__menuLink.product__menuLink--comparison(href='#0')
                                        span.product__menuLinkBorder
                                            span.product__menuText Добавить
                                                br
                                                | в сравние

                                li.product__menuItem
                                    a.product__menuLink.product__menuLink--myFavorites(href='#0')
                                        span.product__menuLinkBorder
                                            span.product__menuText В список
                                                br
                                                | желаний

                    .product__section
                        .product__info
                            .row
                                .product__infoContainer.product__infoContainer--delivery
                                    h2 Доставка
