                                    //-.product__optionsItemContainer.product__optionsItemContainer--right
                                        .product__optionsPrice= val.price

                                    .product__optionsItemContainer.product__optionsItemContainer--fixed
                                        .product__optionsItemContainerInner


                                            if ('select' in val)
                                                .select
                                                    .select-button(href='javascript:void(0);')= val.select[0].title

                                                    .select-drop
                                                        ul.select-list

                                                            each select, index in val.select

                                                                if (index == 0)

                                                                    if ('image' in select)
                                                                        li.select-item.image.active= select.title
                                                                            .select-image
                                                                                img(src='data/product/select/' + select.image + '.jpg')

                                                                    else
                                                                        li.select-item.active= select.title

                                                                else

                                                                    if ('image' in select)
                                                                        li.select-item.image= select.title
                                                                            .select-image
                                                                                img(src='data/product/select/' + select.image + '.jpg')

                                                                    else
                                                                        li.select-item= select.title

                            .product__optionsHide

                                each val in productOptions
                                    .product__optionsItem
                                        input(type='hidden')

                                        .product__optionsItemContainer.product__optionsItemContainer--left
                                            .checkbox.checkbox--small
                                                label
                                                    input.checkbox-input(type='checkbox')
                                                    i.checkbox-icon
                                                    .checkbox-title= val.title

                                        .product__optionsItemContainer.product__optionsItemContainer--right
                                            .product__optionsPrice= val.price

                                        .product__optionsItemContainer.product__optionsItemContainer--fixed
                                            .product__optionsItemContainerInner

                                                if ('select' in val)
                                                    .select
                                                        .select-button(href='javascript:void(0);')= val.select[0].title

                                                        .select-drop
                                                            ul.select-list

                                                                each select, index in val.select

                                                                    if (index == 0)

                                                                        if ('image' in select)
                                                                            li.select-item.image.active= select.title
                                                                                .select-image
                                                                                    img(src='data/product/select/' + select.image + '.jpg')

                                                                        else
                                                                            li.select-item.active= select.title

                                                                    else

                                                                        if ('image' in select)
                                                                            li.select-item.image= select.title
                                                                                .select-image
                                                                                    img(src='data/product/select/' + select.image + '.jpg')

                                                                        else
                                                                            li.select-item= select.title


                            a.product__optionsMore(href='javascript:void(0);')
                                span.product__optionsMoreText(data-text='Скрыть дополнительные сервисы') Еще 2 дополнительных сервиса

                        .product__button
                            button.button.button--buy
                                span.button__text Купить

                        .product__credit
                            a.product__creditLink(href='#0') Купить в кредит

                        .product__oneClick
                            .product__oneClickContainer.product__oneClickContainer--input
                                input.product__oneClickText(type='text' placeholder='+38 (___) ___–__–__')

                            .product__oneClickContainer.product__oneClickContainer--button
                                button.button.button--buy.disabled 
                                    span.button__text Купить в 1 клик

                .product__container.product__container--center
                    .product__section.hide-md-max
                        .row
                            .product__container.product__container--color
                                .product__color
                                    .product__colorTitle
                                        a.product__colorTitleLink(href='javascript:void(0);') Цвета:

                                    .product__colorContainer
                                        ul.product__colorList

                                            each val in productColor
                                                li.product__colorItem
                                                    - modifier = ('class' in val) ? 'product__colorLink--' + val.class : ''

                                                    if ('active' in val && val.active)

                                                        if (val.color == '#fff')
                                                            a.product__colorLink.product__colorLink--active(href='javascriot:void(0);')
                                                                .product__colorImage.border(style='background-color: ' + val.color)
                                                                .product__colorText= val.text

                                                        else
                                                            a.product__colorLink.product__colorLink--active(href='javascriot:void(0);')
                                                                .product__colorImage(style='background-color: ' + val.color)
                                                                .product__colorText= val.text

                                                    else

                                                        if (val.color == '#fff')
                                                            a.product__colorLink(href='#0' class= modifier)
                                                                span.product__colorImage.border(style='background-color: ' + val.color)

                                                        else
                                                            a.product__colorLink(href='#0' class= modifier)
                                                                span.product__colorImage(style='background-color: ' + val.color)

                            .product__container.product__container--size
                                .product__size
                                    .product__sizeTitle
                                        a.product__sizeTitleLink(href='javascript:void(0);') Память:

                                    .product__sizeContainer
                                        ul.product__sizeList

                                            each val in productSize
                                                li.product__sizeItem

                                                    if ('active' in val && val.active)
                                                        a.product__sizeLink.product__sizeLink--color(href='#0' title= val.text)= val.text

                                                    else
                                                        a.product__sizeLink(href='#0' title= val.text)= val.text

                    .product__section.hide-md-max
                        .product__feature
                            .product__featureContent
                                a.product__featureLink(href='#0') Разрешение 5.0" IPS (1280x720)
                                |  /
                                a.product__featureLink(href='#0') Процессор 4 ядра (1.3 Ггц)
                                |  /
                                a.product__featureLink(href='#0') Память 16 Gb + microSD до 64 Gb
