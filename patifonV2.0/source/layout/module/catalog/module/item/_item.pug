                                                    span.catalog__itemColorContent.catalog__itemColorContent--border(style='background: ' + color.value)

                                            else
                                                a.catalog__itemColorLink.catalog__itemColorLink--active(href='#')
                                                    span.catalog__itemColorContent(style='background: ' + color.value)

                                    else
                                        li.catalog__itemColorItem

                                            if (color.value == '#fff')
                                                a.catalog__itemColorLink(href='#')
                                                    span.catalog__itemColorContent.catalog__itemColorContent--border(style='background: ' + color.value)

                                            else
                                                a.catalog__itemColorLink(href='#')
                                                    span.catalog__itemColorContent(style='background: ' + color.value)

                .catalog__itemContent
                    .catalog__itemTitle
                        a.catalog__itemTitleLink(href='#')= val.title

                    if (val.accessories)
                        .catalog__itemSection
                            .catalog__itemContainer.catalog__itemContainer--left
                                .catalog__itemReview
                                    a.catalog__itemReviewLink(href='#')= val.review


                            .catalog__itemContainer.catalog__itemContainer--right
                                .catalog__itemRating.rating.ratingInit
                                    input(type='hidden' value= val.rating)

                    else
                        .catalog__itemSection
                            .catalog__itemContainer.catalog__itemContainer--left
                                .catalog__itemReview
                                    a.catalog__itemReviewLink(href='#')= val.review

                                .catalog__itemRating.rating.ratingInit
                                    input(type='hidden' value= val.rating)


                            .catalog__itemContainer.catalog__itemContainer--right
                                .catalog__itemInStock(class='catalog__itemInStock--' + val.inStock.status)= val.inStock.title

                    .catalog__itemSection
                        .catalog__itemContainer.catalog__itemContainer--left
                            .catalog__itemMenu
                                ul.catalog__itemMenuList

                                    each menu in val.menu

                                        if ('active' in menu && menu.active)
                                            li.catalog__itemMenuItem.active
                                                a.catalog__itemMenuLink(href='#' class='catalog__itemMenuLink--' + menu.class)

                                        else
                                            li.catalog__itemMenuItem
                                                a.catalog__itemMenuLink(href='#' class='catalog__itemMenuLink--' + menu.class)

                        .catalog__itemContainer.catalog__itemContainer--right
                            .catalog__itemBenefit
                                ul.catalog__itemBenefitList

                                    each benefit in val.benefit
                                        li.catalog__itemBenefitItem
                                            .catalog__itemBenefitContent(class='catalog__itemBenefitContent--' + benefit.class)

                                                if ('text' in benefit)
                                                    .catalog__itemBenefitDrop!= benefit.text

                    if (val.accessories)
                        .catalog__itemSection
                            .catalog__itemInStock(class='catalog__itemInStock--' + val.inStock.status)= val.inStock.title

                    .catalog__itemSection
                        .catalog__itemContainer.catalog__itemContainer--left

                            if ('priceOld' in val)
                                .catalog__itemPriceOld= val.priceOld

                            .catalog__itemPrice= val.price

                        .catalog__itemContainer.catalog__itemContainer--right
                            button.button.button--buy
                                span.button__text В корзину

