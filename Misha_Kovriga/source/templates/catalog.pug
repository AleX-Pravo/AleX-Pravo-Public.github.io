//- Utility

include utils/_variable.pug

-
    pageTitle = 'catalog'
    catalog = true
    nameTitle = 'Продукція'
    //- use if necessary


doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout.layout
            include layout/_header.pug

            //= Main =
            main#main.main
                .layout__box

                    //- (source/scss/layout/_layout.scss)
                    h1.nameTitle !{nameTitle}

                    section
                        include module/_catalog.pug
            //= End main =
            = '\n'

            #shadow

        //= End layout =

        include layout/_footer.pug
        include module/_mobile-menu.pug
        include module/_cookies.pug

        include layout/_sprite.pug
        include layout/_scripts.pug
