-
    pageTitle = 'Відновлення зниклого світла'
//- Utility
include utils/_variable.pug

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout
            include layout/_header.pug

            //= Main =
            main#main.main
                - var breadcrumbs = ['Головна сторінка', 'Послуги та ціни', 'Послуги електрика', 'Відновлення зниклого світла']
                include module/_breadcrumbs.pug

                .container
                    - var title = [{modifier: 'title--service', elem: 'h1', icon: 'data/icon/1.png', text: 'Послуги електрика', name: 'Відновлення зниклого «світла»', second: true}]
                    include module/_title.pug

                    include module/_service.pug

                    .subservisez__action.order__wizard
                        a.button.subservisez__button(href='#') Замовити майстра
            //= End main =
            = '\n'

        //= End layout =

        include layout/_footer.pug
        include layout/_scripts.pug
        script(src='assets/js/jquery.selectric' + minSuffix + '.js')
        script.
            $(document).ready(function () {
                $('.languagelist, .citylist').selectric();
                //-$('.languagelist').selectric();
            });
