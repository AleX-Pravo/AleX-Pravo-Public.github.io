-
    pageTitle = 'Модальное окно'
//- Utility
include utils/_variable.pug

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout
            include layout/_header.pug

            //= Main =
            main#main.main
                - var breadcrumbs = ['Головна сторінка', 'Контакти']
                include module/_breadcrumbs.pug

                = '\n'
                //= forms =
                //- (module/_modal.scss)

                .container
                    a.popup-modalExit(href='#form-popup') ВХІД В КАБІНЕТ

                = '\n'
                //= popup-modalExit =
                .modal.white-popup-block.mfp-hide.popup-ss#form-popup
                    a.modal__close.popup-modal-dismiss(href='#')

                    .modal__content-ss
                        .modal__title
                            - var title = [{modifier: '', elem: 'h2', icon: '', text: '', name: 'Вхід'}]
                            include module/_title.pug

                        .modal__review
                            .modal__review-container-ss

                                .modal__review
                                    input.modal__review-input(type='text' placeholder="Введіть телефон")
                                    input.modal__review-input.error(type='text' placeholder='Введіть пароль')
                                    button.modal__review-submit(type='submit') Увійти

                                    .modal__review-button
                                        a.registration-button(href='#form-registration') Реєстрація
                                        a.reflections-button(href='#form-reflections') Забули пароль?
                //= End popup-modalExit =
                = '\n'

                = '\n'
                //= registration-button =
                .modal.white-popup-block.mfp-hide.popup-ss.popup-ss-740#form-registration
                    a.modal__close.popup-modal-dismiss(href='#')

                    .modal__content-ss
                        .modal__title
                            - var title = [{modifier: '', elem: 'h2', icon: '', text: '', name: 'Реєстрація'}]
                            include module/_title.pug

                        .modal__review
                            .modal__review-container-ss

                                .modal__review-container
                                    .modal__review-field
                                        input.modal__review-input(type='text' placeholder="Введіть ПІБ")
                                        input.modal__review-input(type='text' placeholder="Введіть email")
                                        input.modal__review-input(type='text' placeholder="Введіть місто")
                                    .modal__review-field
                                        input.modal__review-input(type='text' placeholder="Введіть телефон")
                                        input.modal__review-input.error(type='text' placeholder='Введіть пароль')
                                        button.modal__review-submit(type='submit') Зареєструватися

                                    .modal__review-checkbox
                                        label.registration__checkbox
                                            input.registration__checkbox-input(type='checkbox')
                                            span.registration__checkbox-checker
                                            span.registration__checkbox-link Я згідний(на) з правилами сайту
                //= End registration-button =
                = '\n'



                = '\n'
                //= registration-button =
                .modal.white-popup-block.mfp-hide.popup-ss#form-reflections
                    a.modal__close.popup-modal-dismiss(href='#')

                    .modal__content-ss
                        .modal__title
                            - var title = [{modifier: '', elem: 'h2', icon: '', text: '', name: 'Відновлення паролю'}]
                            include module/_title.pug

                        .modal__review
                            .modal__review-container-ss

                                .modal__review
                                    input.modal__review-input(type='text' placeholder="Введіть телефон")
                                    button.modal__review-submit(type='submit') Відправити

                //= End registration-button =
                = '\n'

            //= End main =
            = '\n'

        //= End layout =

        include layout/_footer.pug
        include layout/_scripts.pug
        script(src=bowerDir + 'dimsemenov/magnific-popup/dist/jquery.magnific-popup.js')

        script.
            $(document).ready(function () {
                $('.popup-modalExit').magnificPopup({
                    type: 'inline',
                    preloader: false,
                    focus: '#username',
                    modal: true,
                    fixedBgPos: true
                });
                $(document).on('click', '.popup-modal-dismiss', function (e) {
                    e.preventDefault();
                    $.magnificPopup.close();
                });

                $('.registration-button').magnificPopup({
                    type: 'inline',
                    preloader: false,
                    focus: '#username',
                    modal: true,
                    fixedBgPos: true
                });
                $(document).on('click', '.popup-modal-dismiss', function (e) {
                    e.preventDefault();
                    $.magnificPopup.close();
                });

                $('.reflections-button').magnificPopup({
                    type: 'inline',
                    preloader: false,
                    focus: '#username',
                    modal: true,
                    fixedBgPos: true
                });
                $(document).on('click', '.popup-modal-dismiss', function (e) {
                    e.preventDefault();
                    $.magnificPopup.close();
                });
            });
