-
    pageTitle = 'Часті питання'
//- Utility
include utils/_variable.pug

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout
            include layout/_header.pug

            //= Main =
            main#main.main
                - var breadcrumbs = ['Головна сторінка', 'Часті питання']
                include module/_breadcrumbs.pug

                .container
                    - var title = [{modifier: '', elem: 'h1', icon: '', text: 'ПОПУЛЯРНІ ПИТАННЯ', name: 'Часті питання'}]
                    include module/_title.pug
                    include module/_faq.pug
                    include module/_question.pug

            //= End main =
            = '\n'

        //= End layout =

        include layout/_footer.pug
        include layout/_scripts.pug
        script.
            $(document).ready(function () {

                // Open faq question
                $('.main').on('click', '.faq__question', function (e) {
                    var item = $(this);

                    item.closest('.faq__item')
                        .toggleClass('active')
                        .find('.faq__drop')
                        .slideToggle(200);
                });
            });
