-
    pageTitle = 'Модальное окно'
//- Utility
include utils/_variable.pug

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout
            include layout/_header.pug

            //= Main =
            main#main.main
                - var breadcrumbs = ['Головна сторінка', 'Контакти']
                include module/_breadcrumbs.pug

                .container
                    a.popup-modal(href='#test-modal') Open modal


                = '\n'
                //= Modal =
                .modal.white-popup-block.mfp-hide#test-modal.modal--middle
                    a.modal__close.popup-modal-dismiss(href='#')

                    .modal__content
                        .modal__title
                            - var title = [{modifier: '', elem: 'div', icon: '', text: '', name: 'Відгук відправлено'}]
                            include module/_title.pug

                        .modal__text Ваш відгук відправлено модератором, він з’явиться на сайті з годом


                //= End modal =
                = '\n'


            //= End main =
            = '\n'

        //= End layout =

        include layout/_footer.pug
        include layout/_scripts.pug
        //-script(src=bowerDir + 'dimsemenov/magnific-popup/dist/jquery.magnific-popup.js')
        script.
            $(document).ready(function () {
                $('.popup-modal').magnificPopup({
                    type: 'inline',
                    preloader: false,
                    focus: '#username',
                    modal: true,
                    fixedBgPos: true
                });
                $(document).on('click', '.popup-modal-dismiss', function (e) {
                    e.preventDefault();
                    $.magnificPopup.close();
                });
            });
