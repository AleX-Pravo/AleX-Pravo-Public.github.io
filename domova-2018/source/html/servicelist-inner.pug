-
    pageTitle = 'Послуги сантехніка'
//- Utility
include utils/_variable.pug

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout
            include module/_top.pug
            include module/_topCiti.pug
            include layout/_header.pug

            //= Main =
            main#main.main
                - var breadcrumbs = ['Головна сторінка', 'Послуги та ціни', 'Послуги сантехніка']
                include module/_breadcrumbs.pug

                .container
                    - var title = [{modifier: '', elem: 'h1', icon: '', text: 'ВИБЕРІТЬ ПОСЛУГУ', name: 'Послуги сантехніка Рівне'}]
                    include module/_title.pug

                    include module/_questionSS.pug

                    include module/_subservisez.pug
                    include module/_text.pug

                    = '\n'
                    //= Service =
                    //- (source/assets/css/module/_service.scss)
                    .service.serviceNew
                        .service__list
                            .service__list-wrapper
                                .service__list-header
                                    .service__list-item.service__list-name
                                        .service__list-header-title Перелік послуг
                                        .service__list-header-text * Одиниця вказана поштучно

                                    .service__list-item.service__list-unit
                                        .service__list-header-title Одиниця виміру

                                    .service__list-item.service__list-value
                                        .service__list-header-title Ціна, грн.

                                    .service__list-item.service__list-guarantee
                                        .service__list-header-title Гарантія

                                each item in serviceListNew
                                    .service__list-field
                                        .service__list-item.service__list-name= item.name
                                        .service__list-item.service__list-unit= item.unit
                                        .service__list-item.service__list-value
                                            .service__list-value__price(href='#')= item.price
                                        .service__list-item.service__list-guarantee #{item.month} міс.
                        .service__list
                            .service__list-footer.
                                Вартість виявлення пошкодженої ділянки електропроводки з подальшим ремонтом встановлюється за виїзд (за умови, що майстер працював не більше години часу).
                    //= End service =
                    = '\n'

            //= End main =
            = '\n'

        //= End layout =

        include layout/_footer.pug
        include layout/_scripts.pug
        script(src='assets/js/jquery.selectric' + minSuffix + '.js')
        script.
            $(document).ready(function () {
                $('.languagelist, .citylist').selectric();
            });
