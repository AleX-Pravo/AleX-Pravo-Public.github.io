-
    pageTitle = 'Модальное окно'
//- Utility
include utils/_variable.pug

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout
            include layout/_header.pug

            //= Main =
            main#main.main
                - var breadcrumbs = ['Головна сторінка', 'Контакти']
                include module/_breadcrumbs.pug

                .container
                    a.popup-modal(href='#test-modal') Open modal


                = '\n'
                //= Modal =
                .modal.white-popup-block.mfp-hide#test-modal
                    a.modal__close.popup-modal-dismiss(href='#')

                    .modal__content
                        .modal__title
                            - var title = [{modifier: '', elem: 'h2', icon: '', text: 'ФОРМА ДЛЯ ВІДГУКІВ', name: 'Напишіть ваш відгук'}]
                            include module/_title.pug


                        .modal__review
                            .modal__review-container

                                .modal__review-field
                                    textarea.modal__review-textarea(placeholder='НАПИШІТЬ ВАШ ВІДГУК')
                                .modal__review-field
                                    input.modal__review-input(type='text' placeholder="Введіть ваше ім'я")
                                    input.modal__review-input.error(type='text' placeholder='Введіть ваш телефон')
                                    input.modal__review-input(type='text' placeholder='Введіть ваш EMAIL')
                                    input.modal__review-input(type='text' placeholder='Введіть ваше місто')
                                    button.modal__review-submit(type='submit') НАДІСЛАТИ ВІДГУК

                //= End modal =
                = '\n'


            //= End main =
            = '\n'

        //= End layout =

        include layout/_footer.pug
        include layout/_scripts.pug
        script(src=bowerDir + 'dimsemenov/magnific-popup/dist/jquery.magnific-popup.js')

        script.
            $(document).ready(function () {
                $('.popup-modal').magnificPopup({
                    type: 'inline',
                    preloader: false,
                    focus: '#username',
                    modal: true,
                    fixedBgPos: true
                });
                $(document).on('click', '.popup-modal-dismiss', function (e) {
                    e.preventDefault();
                    $.magnificPopup.close();
                });
            });
