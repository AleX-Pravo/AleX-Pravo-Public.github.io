//- Utility
include utils/_variable.pug

- pageTitle = 'Відгуки'
- nameTitle = 'feedback'
- subTitle = 'Відгуки наших клієнтів'
//-source/html/layout/_header.pug
- var innerPage = 'innerPage'

//-_topBlock.pug_breadcrumbs.pug
- var breadcrumbs = ['Головна']


doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout
            include layout/_header.pug
            include layout/_header-device.pug

            //= Main =
            main#main.main
                include module/_topBlock.pug
                include module/_feedback.pug
            //= End main =
            = '\n'

        //= End layout =

        include layout/_footer.pug
        include module/_join-modal.pug
        include layout/_scripts.pug
        script(src='assets/js/rating.js')

        script.
            $(document).ready(function () {

                $('.feedbackForm').on('click', '.help-block__close', function() {
                    $(this).closest('.form-group').removeClass('has-error');
                });

                $('.rating4').rating({
                    max: 5,
                    createNode: false
                });
            });
