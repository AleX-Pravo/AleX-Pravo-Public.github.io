//- Utility
include utils/_variable.pug

-
    pageTitle = 'news'
    magnificPopup = true
    breadcrumbs = [{name: 'На головну'}]


doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout.layout

            include layout/_aside.pug

            //= Main =
            main#main.main
                include layout/_navigation.pug

                .container
                    .layout__box
                        include module/_breadcrumb.pug

                        section
                            h1.title-center блог
                            .layout__box-blog
                                - for(var i = 0; i < 8; i++)
                                    include module/_news.pug
                        section
                            include module/_pagination.pug






            //= End main =

            #shadow

        //= End layout =

        include layout/_footer.pug
        include layout/_scripts.pug



