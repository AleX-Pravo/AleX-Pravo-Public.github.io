//- Utility
include utils/_variable.pug

-
    pageTitle = 'order'

    magnificPopup = true
    magnificPopupGallery = true
    select2 = true
    magnificPopup = true
    breadcrumbs = [{name: 'На головну'}]

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout.layout

            include layout/_aside.pug

            //= Main =
            main#main.main
                include layout/_navigation.pug

                .container
                    .layout__box
                        include module/_breadcrumb.pug

                    .layout__box-inner

                        section.layout__box-order.title-left
                            h2 оформлення замовлення
                            div
                                a(href="javascript:void(0)")
                                    img(src="data/slider/big/1.png", alt="")
                                include module/_table.pug
                            form(id='' action='#' method='post')
                                include module/_address.pug
                                include module/_coordinates.pug

                        section.section
                            include module/_order-block


            //= End main =

            #shadow

        //= End layout =

        include layout/_footer.pug
        include layout/_scripts.pug
        script.
            $(document).ready(function () {

                if ($(window).width() >= 1320) {
                    $(window).scroll(sticky);
                }

            });

            function sticky() {
                let y = $(window).scrollTop(),
                    block = $('.order-block');

                if (y > ($('.layout__box').outerHeight()) + 40) {

                    block.css({
                    'position': 'fixed',
                    'top': '0',
                    'marginTop' : 20,
                    'right': ($(window).width() - $('.container').outerWidth()) / 2 - 20
                    });

                } else {
                    block.removeAttr('style');
                }
            };
