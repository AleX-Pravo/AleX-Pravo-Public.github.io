//- Utility
include utils/_variable.pug

-
	pageTitle = 'main'

	main = true
	select2 = true
	perfectScrollBar = true

	swiper = true
	swiperPrimaryInit = true

	magnificPopup = true
	magnificPopupInline = true


doctype html
html
	include layout/_head.pug

	body

		= '\n'
		//= Layout =
		#layout.layout

			include layout/_aside.pug


			//= Main =
			main#main.main
				include layout/_header.pug
				include layout/_navigation.pug

				.container
					.layout__box
						section
							h2 Пошук Авто
							include module/_index-searchAuto.pug

						section
							h2 Послуги
							include module/_index-services.pug

						section
							h2 Нові пропозиції

							.layout__box-catalog.layout__box-catalog--similar.swiper.swiper--proposition
								.swiper-container(data-breakpoints='{"9999":{"slidesPerView":5}, "1025":{"slidesPerView":4}, "768":{"slidesPerView":3}, "600":{"slidesPerView":2}}')
									.swiper-wrapper
										each item in productItems
											.swiper-slide
												include module/_product.pug

						section
							h2 Чому Sprinter-avto

							.swiper.swiper--advantages
								.swiper-container(data-breakpoints='{"9999":{"slidesPerView":5},"1440":{"slidesPerView":4}, "1025":{"slidesPerView":3}, "768":{"slidesPerView":2}, "480":{"slidesPerView":1}}')
									.swiper-wrapper
										- swiper = advantagesItems
										each item in swiper
											.swiper-slide
												include module/_advantages.pug
									.swiper-button-next
									.swiper-button-prev
						section
							h2 Наші клієнти

							.swiper.swiper--customers
								.swiper-container(data-breakpoints='{"9999":{"slidesPerView":4}, "840":{"slidesPerView":3}, "600":{"slidesPerView":2}, "480":{"slidesPerView":1}}')
									.swiper-wrapper
										- swiper = swiperCustomersItems
										each item in swiper
											.swiper-slide
												div
													img(src='data/clients/' + item + '.jpg')
									.swiper-button-next
									.swiper-button-prev

						section.title-left
							h2 компанія Sprinter-avto
							include module/_index-about.pug


			//= End main =

			#shadow

		//= End layout =

		include layout/_footer.pug
		include layout/_scripts.pug
		include module/_cookies.pug



