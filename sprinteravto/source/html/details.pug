//- Utility
include utils/_variable.pug

-
    pageTitle = 'details'
    select2 = true

    swiper = true
    swiperThumbsInit = true

    magnificPopup = true
    magnificPopupVideo = true
    magnificPopupGallery = true

    breadcrumbs = [{name: 'На головну'},{name: 'Автомобілі', active: true}]

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =|
        #layout.layout

            include layout/_aside.pug

            //= Main =
            main#main.main
                include layout/_navigation.pug

                .container
                    .layout__box
                        include module/_breadcrumb.pug

                        section
                            include module/_details.pug
                            include module/_table.pug

                        section
                            h1 Схожі пропозиції

                            .layout__box-catalog.layout__box-catalog--similar
                                each item in productItems
                                    include module/_product.pug

            //= End main =

            #shadow

        //= End layout =

        include layout/_footer.pug
        include layout/_scripts.pug

