//= contacts =
//- (source/assets/css/module/_contacts.scss)
.contacts
    .contacts__info
        h3 Спрінтер-авто
        ul.contacts__list
            each item in contacts
                li.contacts__list-item(class= item.class)
                    if (item.href)
                        a.contacts__list-inner(href= item.href)= item.name
                    else
                        each elem in item.numbers
                            a.contacts__list-inner(href= elem.href)= elem.name
        .contacts__buy
            h4 З питань купівлі контактуйте:
            .contacts__manager
                each item in contactsManager
                    .contacts__position
                        img(src="data/contacts/" + item.image, alt="")
                        p.contacts__position-name= item.name
                            a(href= item.href)= item.phone
                        span= item.position

        .contacts__buy
            h4 З питань післяпродажної підтримки:
            p.contacts__position-name Володимир
                a(href='tel:0967836232') (096) 783-62-32
    include _map.pug
