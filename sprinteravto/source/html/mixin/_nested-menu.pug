mixin nested-menu(obj)
    each item in obj
        -
            main = (item.main) ? 'main' : ''
        
        if item.list
            li.nested-menu__list-item.has-children
                a.nested-menu__list-link(href='javascript:void(0);' class= main)= item.title
                    span.nested-menu__button.go-forward
                ul.nested-menu__list.is-hidden
                    li.nested-menu__list-item
                        a.nested-menu__list-link(href='javascript:void(0);' class= main)= item.title
                            span.nested-menu__button.go-back
                    +nested-menu(item.list)
        else
            li.nested-menu__list-item
                a.nested-menu__list-link(href='javascript:void(0);')= item.title