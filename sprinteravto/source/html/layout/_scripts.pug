                breakpoints: {

                    320: {
                    slidesPerView: 2,
                    spaceBetween: 10
                    },

                    480: {
                    slidesPerView: 3,
                    spaceBetween: 30
                    },

                    600: {
                    slidesPerView: 4,
                    spaceBetween: 15
                    }
                }
            });
            var galleryTop = new Swiper('.gallery-top', {
                loop: false,
                loopedSlides: 5,
                spaceBetween: 0,
                thumbs: {
                    swiper: galleryThumbs
                }
            });

            let btnNext = '.slider-next',
                btnPrev = '.slider-prev';

            if ($('.gallery-thumbs .swiper-slide', this).length <= 4) {
                $(btnNext, this).remove();
                $(btnPrev, this).remove();
                $('.gallery-thumbs .swiper-wrapper', this).css('margin', 0)
                return;
            }
        });

