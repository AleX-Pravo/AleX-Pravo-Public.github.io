        $(document).ready(function () {

            var galleryThumbs = new Swiper('.gallery-thumbs', {
                spaceBetween: 15,
                slidesPerView: 5,
                freeMode: false,
                watchSlidesVisibility: false,
                watchSlidesProgress: false,
                loop: true,
                navigation: {
                    nextEl: '.slider-next',
                    prevEl: '.slider-prev',
                },
                // Responsive breakpoints
