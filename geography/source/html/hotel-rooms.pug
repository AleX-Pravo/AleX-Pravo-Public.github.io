//- Utility
- pageTitle = 'Готель'
include utils/_variable.pug

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout
            include layout/_header.pug

            //= Main =
            main#main.main
                .container
                    include module/_hotel-menu.pug
                    include module/_hotel-tabs.pug
                    include module/_reserve.pug
                    //-include module/_reserve-success.pug


            //= End main =
            = '\n'

        //= End layout =

        include layout/_footer.pug
        include layout/_scripts.pug

        script(src=bowerDir + 'magnific-popup/dist/jquery.magnific-popup.js')
        script(src=bowerDir + 'swiper/dist/js/swiper.min.js')
        script.
            $(document).ready(function () {
                $('.hotel-tabs__reserve').magnificPopup();
            })
