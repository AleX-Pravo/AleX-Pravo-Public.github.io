//- Utility
include utils/_variable.pug


- pageTitle = 'blogs'
- nameTitle = 'Блог'
- subTitle = 'Блог'

//-_topBlock.pug_breadcrumbs.pug
//- var about = 'about'

- store = true // задаем хедеру класс .store через модификатор (_header.pug)

//-js
-
    select2 = true
    //select2filters = true
    perfectScrollbar = true

//- selectric = true

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout.layout
            include layout/_header.pug
            include layout/_header-device.pug

            //= Main =
            - modifierMain = (pageTitle!='main') ? 'main--inner' : ''
            main#main.main(class= modifierMain)
                .container

                    include module/_breadcrumb.pug

                    h1.topBlock__title= nameTitle
                    .strainer
                        -
                            categories = true
                            searchright = true
                        include module/_filters.pug

                    include module/_places.pug

                    .catalog
                        //- (source/assets/css/module/_blog.scss)
                        .blog__wrapper
                            - for(var i = 0; i < 6; i++)
                                - review = true
                                include module/_blogs.pug

                        //- (source/assets/css/module/_blogs-poster.scss)
                        .blogs-poster
                            .blogs-poster__img
                                //proportions and the maximum size of images 1530x500
                                img(src='data/blog/banner.png' alt='')
                            .blogs-poster__text
                                .blogs-poster__text-title
                                    |Підбірка статтей по категорії
                                    br
                                    |“Закарпаття”

                                a.button(href='#') Прочитати

                        .blog__wrapper
                            - for(var i = 0; i < 3; i++)
                                - review = true
                                include module/_blogs.pug

                        include module/_pagination.pug

                -
                    categoriesMob = true
                include module/_dwelling-filter.pug
            //= End main =
            = '\n'

        //= End layout =

        include layout/_footer.pug
        //include module/_pageUp.pug
        include layout/_scripts.pug

        script.
            $(document).ready(function () {

                $(".js-example-tags").select2({
                    tags: true,
                    width: 'style'
                });
            });
