//- Utility
include utils/_variable.pug

-
    pageTitle = 'guide'
    main = false // для _logo.pug
    //js
    rating = true
    magnificPopup = true
    magnificPopupGallery = true
    tab = true

    perfectScrollbar = true
    perfectScrollbarModal = true
    mCustomScrollbar = true

    swiper = true
    easeSwiper = true

    magnificResponseimg = true
    magnificResponsevideo = true

    //- breadcrumbItems = breadcrumbMainItems // передаем данные в _breadcrumb.pug з utils/_variable.pug

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout.layout.tab
            include layout/_header.pug
            include layout/_header-device.pug

            //= Main =
            main#main.main.main--header
                .breadcrumb--inner
                    .container
                        include module/_breadcrumb.pug
                include module/_bigboard.pug
                #one.tab-box

                    include module/_description.pug
                    include module/_slider.pug
                    include module/_photos.pug
                    include module/_comments.pug
                    include module/_region.pug

                #two.tab-box
                    include module/_comments.pug
                #three.tab-box
                    include module/_region.pug

            //= End main =
            = '\n'

            //-#shadow

        //= End layout =

        include layout/_footer.pug
        //- include module/_cookies.pug
        include layout/_scripts.pug

        = '\n'
        //= Modal =
        .modal.modal--choose.white-popup-block.mfp-hide#image-drive

            .modal__content
                - fotoVideo = true
                include module/_popup.pug

        //= End modal =
        = '\n'

