//- Utility
include utils/_variable.pug

-
    pageTitle = 'order'
    nameTitle = 'Каталог житла'
    main = false // для _logo.pug
    card = true // для иконки корзины
    store = true // задаем хедеру класс .store через модификатор (_header.pug) для зеленого цвета на мобайле
    perfectScrollbar = true

    //js

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =

        #layout.layout

            include layout/_header.pug
            include layout/_header-device.pug


            //= Main =

            - modifierMain = (pageTitle!='main') ? 'main--inner' : ''
            main.main(class= modifierMain)
                .container
                    include module/_breadcrumb.pug


                    .layout__box-order
                        form(action='#' method='post')
                            h2.title Оформлення
                            include module/_ordering.pug
                            h3 Ваше замовлення

                            .layout__box-basket
                                div
                                    - for(var i = 0; i < 3; i++)
                                        include module/_cart-item.pug
                                include module/_delivery.pug




            //= End main =
            = '\n'

            //-#shadow

        //= End layout =

        include layout/_footer.pug
        //- include module/_cookies.pug
        include layout/_scripts.pug


