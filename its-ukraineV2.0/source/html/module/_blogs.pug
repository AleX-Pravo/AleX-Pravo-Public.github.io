//=blogs-wrapper =
//- (source/assets/css/module/_blogs.scss)

each val, index in blog
    .blogs__item(class = (modifier) ? modifier : '' class= transparent ? 'transparent' : '')
        if (review)
            each item in report
                include _review.pug
        //proportions and the maximum size of images 470x320
        a.blogs__img(href='#')
            img.__bg(src='data/main/blogs-small' + i + '.jpg' data-src='data/main/' + val.src + i + '.jpg')
        .blogs__info.blogs__block
            a.blogs__title(href='#')= val.title
            .blogs__info-bottom
                .blogs__watch-report
                    .blogs__watch
                        span= val.watch
                    .blogs__report
                        a(href='#')= val.report
                .blogs__date= val.date

//= End blogs-wrapper =
