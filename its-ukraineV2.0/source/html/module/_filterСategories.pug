-
    var routesSelect = [
        {
            label: 'Оберіть категорію',
            select: [
                {
                    name: 'Категорії',
                    value: '1',
                    selected: true
                },
                {
                    name: 'Категорії',
                    value: '2'
                },
                {
                    name: 'Категорії',
                    value: '3'
                }
            ]
        }
    ]

each item in routesSelect
    .form-group
        label.control-label.control-img
        label.control-label.control-text= item.label

        select.form-control.js-example-basic-single
            each val in item.select
                if val.selected
                    option(value= val.value selected)= val.name
                else
                    option(value= val.value)= val.name
        .help-block
