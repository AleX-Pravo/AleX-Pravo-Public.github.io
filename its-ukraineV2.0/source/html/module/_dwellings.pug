//=dwellings-wrapper =
//- (source/assets/css/module/_dwellings.scss)

each val, index in dwelling
    .dwellings__item(class = (modifier) ? modifier : '')
        //proportions and the maximum size of images 410x270
        a.dwellings__img(href='#')
            img.__bg(src='data/main/dwellings-small' + i + '.jpg' data-src='data/main/' + val.src + i + '.jpg')
        .dwellings__info
            .dwellings__info-top
                .dwellings__info-top-column
                    a.dwellings__title(href='#')= val.infotopTitle
                    a.dwellings__town(href='#')= val.town
                .dwellings__rating 7.9
                    p
                        a(href="#")
                            i 27
                            span оцінок
            .dwellings__info-bottom
                .dwellings__price= val.price
                    .dwellings__oldprice= val.oldprice
                .dwellings__like.like-green.--active
//= End dwellings-wrapper =
