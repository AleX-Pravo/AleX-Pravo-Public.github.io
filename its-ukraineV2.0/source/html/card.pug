//- Utility
include utils/_variable.pug

-
    pageTitle = 'card'
    nameTitle = 'Каталог житла'
    main = false // для _logo.pug
    card = true // для иконки корзины
    store = true // задаем хедеру класс .store через модификатор (_header.pug)
    //js
    tab = true
    magnificPopup = true
    magnificPopupGallery = true

    swiper = true
    sliderThumbs = true
    perfectScrollbar = true
    //- breadcrumbItems = breadcrumbMainItems // передаем данные в _breadcrumb.pug з utils/_variable.pug

doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =

        #layout.layout

            include layout/_header.pug
            include layout/_header-device.pug


            //= Main =

            - modifierMain = (pageTitle!='main') ? 'main--inner' : ''
            main.main(class= modifierMain)
                .container
                    include module/_breadcrumb.pug

                    .layout__box-card
                        include module/_thumbs-slider.pug
                        include module/_characteristics.pug

                    h1.title Рекомендуємо
                    .layout__box-recomended
                        - for(var i = 0; i < 4; i++)
                            include module/_card.pug




            //= End main =
            = '\n'

            //-#shadow

        //= End layout =

        include layout/_footer.pug
        //- include module/_cookies.pug
        include layout/_scripts.pug


