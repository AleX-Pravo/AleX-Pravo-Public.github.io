//- Utility
include utils/_variable.pug

-
    pageTitle = 'example'
    
    tab = true // инициализируем tab.js в _scripts.pug
    rating = true // инициализируем rating.js в _scripts.pug

    magnificPopup = true // подключаем стили и скрипты magnificPopup в _head.pug
    magnificPopupInline = true // инициализируем magnificPopup.js если блок в _scripts.pug
    magnificPopupGallery = true // инициализируем magnificPopup.js если галерея в _scripts.pug
    ionRangeSlider = true // подключаем и инициализируем ionRangeSlider.js в _scripts.pug
    select2 = true // подключаем стили, скрипты и инициализируем ionRangeSlider.js в _scripts.pug

    breadcrumbItems = breadcrumbExampleItems // передаем данные в _breadcrumb.pug з utils/_variable.pug


doctype html
html
    include layout/_head.pug

    body

        = '\n'
        //= Layout =
        #layout.layout
            include layout/_header.pug
            //-include layout/_navigation.pug

            //= Main =
            main#main.main
                .container
                    .layout__box.layout__box--example
                        .layout__box-aside

                            include module/_filter.pug

                        .layout__box-content

                            hr
                            
                            include module/_breadcrumb.pug

                            p below you'll find tab-box with most necessary features

                            hr

                            = '\n'
                            //= Tab =

                            //- tab'ы лучше юзать не отдельным модулем, а подобным скелетом. т.о. можно легко менять вложения и добавлять модификаторы, там где это необходимо. настраиваем в _tab.scss

                            .tab
                                .tab-menu
                                    ul.tab-list
                                        li.tab-item
                                            a.tab-link(href='#one') common-nested-list
