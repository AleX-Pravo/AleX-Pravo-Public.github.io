                                            a.tab-link(href='#three') magnific-popup inline
                                        li.tab-item
                                            a.tab-link(href='#four') magnific-popup gallery
                                        li.tab-item
                                            a.tab-link(href='#five') form template

                                .tab-content

                                    hr

                                    #one.tab-box

                                        //- nested recursive list for example =
                                        include module/_nested-list.pug

                                        hr

                                        include module/_pagination.pug

                                    #two.tab-box

